<article class="movie">
 <div class="title">
  <p class="post-titles">{{title}}</p>
  <p class="date-post"> Posted by {{user.username}} on {{format_date created_at}}</p>  
  </div>
  <div class="body-main">
  <p class="main-post">{{format_url post_url}}</p>
  </div>
  <div class="meta">
    <a class="comment-text" href="/movie/{{id}}">{{comments.length}} comment(s)</a>
  </div>
</article>